<!--pages/category/index.wxml-->
<view class="cates">
  <SearchInput></SearchInput>
  <view class="cates_container">
    <!-- 左侧菜单 -->
    <scroll-view scroll-y class="left_menu">
      <view class="menu_item {{index === currentIndex?'active':''}}" wx:for="{{ leftMenuList }}" wx:key="*this"
      bindtap="handleItemTap"
      data-index="{{index}}"
      >
        {{item}}
      </view>
    </scroll-view>

    <!-- 右侧菜单 -->
    <scroll-view scroll-y scroll-top="{{scrollTop}}" class="right_content">
      <view class="goods_group" wx:for="{{rightContent}}" wx:for-index="index1" wx:for-item="item1">
        <view class="goods_title">
        <text class="delimiter">/</text>
        <text class="title">{{item1.cat_name}}</text>
        <text class="delimiter">/</text>
        </view>
        <view class="goods_list">
          <navigator
          wx:for = "{{item1.children}}"
          wx:for-index = "index2"
          wx:for-item = "item2"
          wx:key = "cat_id"
          url="/pages/goods_list/index?cid={{item2.cat_id}}"
          >
          <image mode="widthFix" src="{{item2.cat_icon}}"></image>
          <view class="goods_name">{{item2.cat_name}}</view>
          </navigator>
        </view>
      </view>
    </scroll-view>
  </view>
</view>